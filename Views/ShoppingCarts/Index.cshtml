@model BooksStore.ViewModels.ShoppingCartViewModel

@{
    ViewData["Title"] = "Index";
}

<!-- Banner Section Begin -->
<section class="banner-section set-bg" data-setbg="img/bluebanner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="banner__text">
                    <h2>Shopping Cart</h2>
                    <div class="banner__option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner Section End -->

<!-- Products Cart Begin
<div class="card-body">

    @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
    {
        var Subtotal = item.Book.Price * item.Quantity;

        <div class="row-card">
            <div class="col-12 col-sm-12 col-md-2 text-center">
                <img class="img-responsive" src="@item.Book.PictureName" alt="prewiew" width="120" height="180">
            </div>
            <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                <h4 class="product-name"><strong>@item.Book.BookName</strong></h4>
                <h4>
                    <small>@item.Book.Summary</small>
                </h4>
            </div>
            <div class="col-12 col-sm-12 text-sm-center col-md-3 text-md-right row-card">
                <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
                    <h4>@Subtotal.ToString("c")<span class="text-muted"> </span></h4>
                </div>
                <div class="col-4 col-sm-4 col-md-4">
                    <div class="quantity">
                        <input type="number" step="1" max="99" min="1" value="@item.Quantity" title="Qty" class="qty" size="4" readonly="readonly">
                    </div>
                </div>
                <div class="col-2 col-sm-2 col-md-2 text-right">
                    <a class="btn btn-secondary" asp-controller="ShoppingCarts"
                       asp-action="RemoveFromShoppingCart" asp-route-bookId="@item.Book.BookId" style="width: 50px; margin-left: 40px; padding-top: 10px;">
                        <i class="fa fa-trash-o mt-0" aria-hidden="true" size="6"></i>
                    </a>
                </div>
            </div>
        </div>
    }

</div>
    <!-- Products Cart End -->
<!--Cart Products Start -->

<table class="table">
    <thead>
        <tr>
            <th width="100px">
                Product
            </th>
            <th width="200px">
                Book Name
            </th>
            <th class="center-tr">
                More Details
            </th>
            <th class="center-tr">
                Price
            </th>
            <th class="center-tr">
                Quantity
            </th>
            <th class="center-tr">
                Subtotal
            </th>
            <th class="center-tr">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
            var Subtotal = item.Book.Price * item.Quantity;
            var Total = Subtotal;
            <tr>
                <td>
                    <img class="img-responsive" src="@item.Book.PictureName" alt="prewiew">
                </td>
                <td>
                    <strong>@item.Book.BookName</strong>
                </td>
                <td class="center-td">
                    <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Book.BookId"><i class="fa fa-info-circle"></i></a>
                </td>
                <td class="center-td">
                    @item.Book.Price$
                </td>
                <td class="center-td">
                    <input type="number" step="1" max="99" min="1" value="@item.Quantity" title="Qty" class="qty" size="4" readonly="readonly">
                </td>
                <td class="center-td">
                    @Subtotal$
                </td>
                <td class="center-td">
                    <a asp-controller="ShoppingCarts" asp-action="AddToShoppingCart" asp-route-bookid="@item.Book.BookId"><i class="fa fa-plus-circle"></i></a> |
                    <a asp-controller="ShoppingCarts" asp-action="RemoveFromShoppingCart" asp-route-bookid="@item.Book.BookId"><i class="fa fa-minus-circle"></i></a> |
                    <a asp-controller="ShoppingCarts" asp-action="ClearFromShoppingCart" asp-route-bookId="@item.Book.BookId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<!--Cart Products End -->

<!--Cart Summary Begin-->
@{
    var GrandSubtotals= Math.Round(Model.ShoppingCartTotal,2);
    var Tax = Math.Round(GrandSubtotals * 0.17,2);
    var GradnTotal= Math.Round(GrandSubtotals + Tax,2);

<section class="bottom-right">
    <table>
        <thead>
            <tr> 
                <th></th>  
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr> 
                <th> Subtotal </th>
                <td> @GrandSubtotals$</td>
            <tr> 
                <th> Tax (17%) </th>
                <td> @Tax$</td>
            <tr> 
                <th> Shipping </th>
                <td> Free </td>
            <tr> 
                <th> Grand Total </th>
                <td> @GradnTotal$</td>
            </tr>
    </table> <br />
    <a href="/Orders/Checkout">
        <button type="button" class="site-btn">Procceed To Checkout</button>
    </a>
</section>
}

<!--Cart Summary End-->